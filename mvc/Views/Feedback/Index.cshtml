@model FeedbackViewModel

<form asp-action="Index" method="post" class="form-horizontal" role="form">

    <div class="form-group">
        <label asp-for="@Model.Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Message" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <textarea asp-for="@Model.Message" class="form-control"></textarea>
            <span asp-validation-for="@Model.Message" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ContactMe" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input type="checkbox" asp-for="@Model.ContactMe" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Send Feedback" />
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

</form>